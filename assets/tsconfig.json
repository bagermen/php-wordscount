{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./public",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
        ],
        "paths": {
            "@/*": [
              "src/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}